{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@agents/*": ["agents/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@graph/*": ["graph.js"]
    }
  },
  "references": [{ "path": "../agents" }, { "path": "../common" }],
  "include": [
    "src/**/*.ts",
    "./src/generated/routes/routes.ts",
    "../../eslint.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}
