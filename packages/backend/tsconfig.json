{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@agents/*": ["./src/agents/*"],
      "@models/*": ["./src/models/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@graph": ["./src/graph.ts"],
      "@llmops-demo/common": ["../common/src/index.ts"]
    }
  },
  "references": [{ "path": "../common" }],
  "include": ["src/**/*.ts", "./src/generated/routes/routes.ts"],
  "exclude": ["node_modules", "dist"]
}
